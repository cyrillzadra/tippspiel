<?xml version='1.0' encoding='utf-8'?>
<widget xmlns="http://www.w3.org/ns/widgets"
        id="ch.euro2016.tippspiel"
        versionCode="1"
        version="0.0.1">

    <name>Euro2016</name>
    <description>Euro 2016 Tipster</description>
    <author email="cyrill.zadra@gmail.com" href="https://github.com/cyrillzadra/tippspiel">Euro 2016 Tipster Team</author>
    <content src="index.html"/>

    <!-- Core plugins -->
    <plugin name="cordova-plugin-device" spec="1.1.1" source="npm" />
    <plugin name="cordova-plugin-globalization" spec="1.0.2" source="npm" />
    <plugin name="cordova-plugin-inappbrowser" spec="1.2.0" source="npm" />
    <plugin name="cordova-plugin-whitelist" source="npm" />

    <feature name="Device">
        <param name="ios-package" value="CDVDevice" />
    </feature>
    <feature name="InAppBrowser">
        <param name="ios-package" value="CDVInAppBrowser" />
    </feature>
    <feature name="Globalization">
        <param name="ios-package" value="CDVGlobalization" />
    </feature>

    <access origin="*"/>
    <access origin="auth.firebase.com"/>
    <access origin="*.firebaseio.com"/>
    <access origin="https://auth.firebase.com/"/>

    <allow-intent href="http://*/*"/>
    <allow-intent href="https://*/*"/>
    <allow-intent href="tel:*"/>
    <allow-intent href="sms:*"/>
    <allow-intent href="mailto:*"/>
    <allow-intent href="geo:*"/>
    <platform name="android">
        <allow-intent href="market:*"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*"/>
        <allow-intent href="itms-apps:*"/>
    </platform>

    <preference name="phonegap-version" value="cli-6.0.0" />
</widget>
